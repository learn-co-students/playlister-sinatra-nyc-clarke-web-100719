<h1>Add a song</h1>


<form action="/songs" method="POST">
    <label>Name: </label><input type="text" name="name" id="Name">
    <br><br>
    <label>Artist: </label><input type="text" name="artist" id="Artist Name">
    <br><br>
    <label>Genres</label>
    <% @genres.each do |genre| %>
        <li><input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"> <%= genre.name %> </li>
    <% end %>

    <br><br>
    <button type="submit" id="Create">Submit</button>
</form>