<h3> Edit Song</h3>

<form action="/songs/<%= @song.slug %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
Song's Name: <input id="Name" type="text" name="name" value ="<%= @song.name %>"required>
Song's Artist: <input id="Artist Name" name="artist" value ="<%= @song.artist.name %>"required>

<h4> Genres </h4>
<% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genre_ids[]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %> > <%= genre.name %> <br> 
<% end %>

<input type="submit" id="Save" value="UPDATE">

</form>